<%
  var pageTitle   = 'Lizzyland — La Dolce Vita';
  var pageDesc    = 'Lizzyland — your tropical gateway to Health, Wealth and Happiness.';
  var currentPage = 'home';
%>
<%- include('partials/header') %>

<style>
  .ll-home-hero {
    background: linear-gradient(160deg, var(--warm-dark) 0%, #3d2510 60%, var(--warm-mid) 100%);
    padding: 3.5rem 2rem 2.5rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }
  .ll-home-hero::before {
    content: '';
    position: absolute; inset: 0;
    background-image:
      radial-gradient(circle at 20% 50%, rgba(200,149,42,0.08) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(26,138,122,0.06) 0%, transparent 40%);
    pointer-events: none;
  }
  .ll-home-hero-inner { position: relative; z-index: 1; max-width: 700px; margin: 0 auto; }
  .ll-home-eyebrow {
    font-family: var(--font-accent); font-style: italic;
    font-size: 1rem; color: var(--gold-light);
    letter-spacing: 0.15em; opacity: 0.8; margin-bottom: 0.5rem;
  }
  .ll-home-title {
    font-family: var(--font-display);
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 700; color: var(--white);
    letter-spacing: -0.02em; line-height: 1;
    margin-bottom: 0.6rem;
    text-shadow: 0 2px 24px rgba(45,27,14,0.4);
  }
  .ll-home-tagline {
    font-family: var(--font-accent); font-style: italic;
    font-size: clamp(1rem, 2.5vw, 1.4rem);
    color: rgba(255,255,255,0.7); letter-spacing: 0.05em;
  }
  .ll-home-doors {
    padding: 0 2rem 5rem;
    max-width: 1300px;
    margin: -2rem auto 0;
    position: relative; z-index: 10;
  }
  .ll-home-doors .ll-doors-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    filter: drop-shadow(0 12px 40px rgba(45,27,14,0.22));
  }
  .ll-door-desc { display: none; }
  .ll-door-body { padding: 1.25rem 1.5rem 1.5rem; text-align: center; border-top: 3px solid var(--gold); }
  .ll-dolce-strip {
    background: var(--sand-light);
    padding: 4rem 2rem;
    text-align: center;
    border-top: 1px solid var(--sand-deep);
  }
  .ll-dolce-strip-inner { max-width: 680px; margin: 0 auto; }
  .ll-dolce-ornament {
    font-size: 1.1rem; color: var(--gold); opacity: 0.6;
    letter-spacing: 0.5rem; display: block; margin-bottom: 0.75rem;
  }
  .ll-dolce-strip-title {
    font-family: var(--font-display); font-style: italic;
    font-size: clamp(1.8rem, 4vw, 3rem); font-weight: 400;
    color: var(--warm-dark); margin-bottom: 0.75rem; line-height: 1.1;
  }
  .ll-dolce-strip-sub {
    font-family: var(--font-accent); font-style: italic;
    font-size: 1.1rem; color: var(--text-muted);
    line-height: 1.7; margin-bottom: 1.5rem;
  }
  .ll-dolce-link {
    display: inline-block; padding: 0.65rem 2rem;
    border: 1.5px solid var(--gold); border-radius: var(--radius-xl);
    color: var(--gold); font-weight: 600; font-size: 0.88rem;
    letter-spacing: 0.06em; transition: all 0.2s;
  }
  .ll-dolce-link:hover { background: var(--gold); color: var(--white); }
  @media (max-width: 900px) {
    .ll-home-doors .ll-doors-grid { grid-template-columns: 1fr; max-width: 460px; margin: 0 auto; }
    .ll-home-doors { margin-top: -1rem; }
  }
</style>

  <!-- ══ HERO — colour only ══ -->
  <section class="ll-home-hero">
    <div class="ll-home-hero-inner">
      <p class="ll-home-eyebrow">✦ Welcome to ✦</p>
      <h1 class="ll-home-title">Lizzyland</h1>
      <p class="ll-home-tagline">Choose the Good Life.</p>
    </div>
  </section>

  <!-- ══ THREE DOORS ══ -->
  <section class="ll-home-doors">
    <div class="ll-doors-grid">

      <a href="/health" class="ll-door-card ll-door-health">
        <div class="ll-door-img-wrap">
          <img src="/images/door-health.jpg" alt="Health" onerror="this.style.display='none'">
        </div>
        <div class="ll-door-body">
          <div class="ll-door-label">Wellness</div>
          <h2 class="ll-door-title">Health</h2>
          <span class="ll-door-cta ll-door-cta-health">Discover →</span>
        </div>
      </a>

      <a href="/space" class="ll-door-card ll-door-wealth">
        <div class="ll-door-img-wrap">
          <img src="/images/door-space.jpg" alt="Wealth" onerror="this.style.display='none'">
        </div>
        <div class="ll-door-body">
          <div class="ll-door-label">Wealth Coaching</div>
          <h2 class="ll-door-title">Wealth</h2>
          <span class="ll-door-cta ll-door-cta-wealth">Discover →</span>
        </div>
      </a>

      <a href="/shop" class="ll-door-card ll-door-happy">
        <div class="ll-door-img-wrap">
          <img src="/images/door-shop.jpg" alt="Happiness" onerror="this.style.display='none'">
        </div>
        <div class="ll-door-body">
          <div class="ll-door-label">New Experiences</div>
          <h2 class="ll-door-title">Happiness</h2>
          <span class="ll-door-cta ll-door-cta-happy">Discover →</span>
        </div>
      </a>

    </div>
  </section>

  <!-- ══ LA DOLCE VITA STRIP ══ -->
  <section class="ll-dolce-strip">
    <div class="ll-dolce-strip-inner">
      <span class="ll-dolce-ornament">✦ · ✦ · ✦</span>
      <h2 class="ll-dolce-strip-title">La Dolce Vita</h2>
      <p class="ll-dolce-strip-sub">
        The sweet life — curated, intentional, and entirely yours.
        Live beautifully. Not perfectly. Not productively. <em>Beautifully.</em>
      </p>
      <a href="/about" class="ll-dolce-link">Our Philosophy →</a>
    </div>
  </section>

  <div class="ll-divider">✦ · ✦ · ✦</div>

<%- include('partials/footer') %>
